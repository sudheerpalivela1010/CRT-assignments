   "source": [
    "n = int(input(\"Enter a positive integer n: \"))\n",
    "\n",
    "if n <= 0:\n",
    "    print(\"Please enter a positive integer.\")\n",
    "else:\n",
    "    even_sum = sum(number for number in range(1, n + 1) if number % 2 == 0)\n",
    "    print(f\"The sum of all even numbers between 1 and {n} is: {even_sum}\")"
